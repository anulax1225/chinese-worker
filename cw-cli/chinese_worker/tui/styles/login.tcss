/* LoginScreen styles â€” Catppuccin Mocha */

#login-container {
    align: center middle;
    width: 100%;
    height: 100%;
}

#login-form {
    width: 56;
    height: auto;
    padding: 2 3;
    border: solid $ctp-lavender;
    background: $panel;
}

#login-title {
    text-align: center;
    text-style: bold;
    color: $ctp-mauve;
    padding: 1 0;
}

#login-subtitle {
    text-align: center;
    color: $ctp-subtext0;
    padding-bottom: 2;
}

#login-form Label {
    padding: 1 0 0 0;
    color: $ctp-subtext1;
}

#login-form Input {
    margin: 0 0 1 0;
    background: $surface;
    border: tall $ctp-surface2;
}

#login-form Input:focus {
    border: tall $ctp-lavender;
}

#login-btn {
    margin-top: 1;
    width: 100%;
}

#login-error {
    margin-top: 1;
    text-align: center;
    color: $error;
}
