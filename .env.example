#--------------------------------------------------------------------------
# Application
#--------------------------------------------------------------------------
APP_NAME="Chinese Worker"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
APP_PORT=80

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

#--------------------------------------------------------------------------
# Sail / Docker
#--------------------------------------------------------------------------
WWWUSER=1000
WWWGROUP=1000
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

#--------------------------------------------------------------------------
# Logging
#--------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

#--------------------------------------------------------------------------
# Database (PostgreSQL with pgvector)
#--------------------------------------------------------------------------
DB_CONNECTION=pgsql
DB_HOST=pgsql
DB_PORT=5432
DB_DATABASE=laravel
DB_USERNAME=sail
DB_PASSWORD=password

FORWARD_DB_PORT=5432
FORWARD_PGADMIN_PORT=8080
PGADMIN_EMAIL=admin@localhost.com
PGADMIN_PASSWORD=password

#--------------------------------------------------------------------------
# Session
#--------------------------------------------------------------------------
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

#--------------------------------------------------------------------------
# Cache & Queue
#--------------------------------------------------------------------------
CACHE_STORE=database
# CACHE_PREFIX=

QUEUE_CONNECTION=database
DB_QUEUE_RETRY_AFTER=90

#--------------------------------------------------------------------------
# Broadcasting (Reverb)
#--------------------------------------------------------------------------
BROADCAST_CONNECTION=reverb

REVERB_APP_ID=123456
REVERB_APP_KEY=chinese-worker-key
REVERB_APP_SECRET=chinese-worker-secret
REVERB_HOST=localhost
REVERB_PORT=8000
REVERB_SCHEME=http

VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

#--------------------------------------------------------------------------
# Redis
#--------------------------------------------------------------------------
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

MEMCACHED_HOST=127.0.0.1

FORWARD_REDIS_PORT=6379

#--------------------------------------------------------------------------
# Mail
#--------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

FORWARD_MAILPIT_PORT=1025
FORWARD_MAILPIT_DASHBOARD_PORT=8025

#--------------------------------------------------------------------------
# AWS / S3 Storage (RustFS/MinIO)
#--------------------------------------------------------------------------
AWS_ENDPOINT=http://rustfs:9000
AWS_ACCESS_KEY_ID=sail
AWS_SECRET_ACCESS_KEY=password
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=laravel
AWS_USE_PATH_STYLE_ENDPOINT=true

FILESYSTEM_DISK=local

FORWARD_RUSTFS_PORT=9000
FORWARD_RUSTFS_CONSOLE_PORT=9001

#--------------------------------------------------------------------------
# AI Configuration
#--------------------------------------------------------------------------
AI_BACKEND=ollama

# Ollama
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3.1
OLLAMA_TIMEOUT=120

FORWARD_OLLAMA_PORT=11434

# Anthropic (Claude)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# Hugging Face Inference Providers
HUGGINGFACE_API_KEY=
HUGGINGFACE_MODEL=meta-llama/Llama-3.1-8B-Instruct
HUGGINGFACE_BASE_URL=https://router.huggingface.co/v1
HUGGINGFACE_TIMEOUT=120
HUGGINGFACE_PROVIDER=

# vLLM GPU Backend
VLLM_GPU_BASE_URL=http://vllm-gpu:8000/v1
VLLM_GPU_MODEL=meta-llama/Llama-3.1-8B-Instruct

# vLLM CPU Backend (fallback for machines without GPU)
VLLM_CPU_BASE_URL=http://vllm-cpu:8000/v1
VLLM_CPU_MODEL=meta-llama/Llama-3.2-3B-Instruct

# Shared vLLM settings
VLLM_API_KEY=
VLLM_MAX_TOKENS=4096
VLLM_TIMEOUT=120

FORWARD_VLLM_GPU_PORT=8001
FORWARD_VLLM_CPU_PORT=8002

# AI Summarization
AI_SUMMARIZATION_ENABLED=true
AI_SUMMARIZATION_BACKEND=
AI_SUMMARIZATION_MODEL=

#--------------------------------------------------------------------------
# Agent Configuration
#--------------------------------------------------------------------------
AGENT_MAX_TURNS=25
AGENT_ON_TOOL_ERROR=stop
AGENT_COMMAND_TIMEOUT=120
TOOLS_BLOCK_PRIVATE_IPS=false

#--------------------------------------------------------------------------
# Document Processing
#--------------------------------------------------------------------------
DOCUMENT_MAX_SIZE=52428800
DOCUMENT_EXTRACTION_TIMEOUT=60
PDF_EXTRACTOR_DRIVER=pdfparser
PDFTOTEXT_PATH=/usr/bin/pdftotext
CHUNK_MAX_TOKENS=1000
CHUNK_OVERLAP_TOKENS=100
TOKEN_ESTIMATION_METHOD=heuristic
DOCUMENT_JOB_TIMEOUT=300
DOCUMENT_STORE_ALL_STAGES=true
DOCUMENT_STORAGE_DISK=local

#--------------------------------------------------------------------------
# Search Configuration (SearXNG)
#--------------------------------------------------------------------------
SEARCH_DRIVER=searxng
SEARXNG_URL=http://searxng:8080
SEARXNG_TIMEOUT=10
SEARXNG_ENGINES=google,bing,duckduckgo
SEARXNG_SAFE_SEARCH=1
SEARCH_CACHE_ENABLED=true
SEARCH_CACHE_TTL=3600
SEARCH_CACHE_STORE=redis
SEARCH_RETRY_TIMES=2
SEARCH_RETRY_SLEEP_MS=500

FORWARD_SEARXNG_PORT=8888

#--------------------------------------------------------------------------
# Web Fetch Configuration
#--------------------------------------------------------------------------
WEBFETCH_TIMEOUT=15
WEBFETCH_MAX_SIZE=5242880
WEBFETCH_USER_AGENT="ChineseWorker/1.0 (Web Fetch Bot)"
WEBFETCH_CACHE_ENABLED=true
WEBFETCH_CACHE_TTL=1800
WEBFETCH_CACHE_STORE=redis
WEBFETCH_MAX_TEXT=50000
WEBFETCH_RETRY_TIMES=2
WEBFETCH_RETRY_SLEEP_MS=500
WEBFETCH_BLOCK_PRIVATE_IPS=false

#--------------------------------------------------------------------------
# Horizon
#--------------------------------------------------------------------------
HORIZON_DOMAIN=
HORIZON_PATH=horizon

#--------------------------------------------------------------------------
# Telescope
#--------------------------------------------------------------------------
TELESCOPE_ENABLED=true
TELESCOPE_DOMAIN=
TELESCOPE_PATH=telescope

#--------------------------------------------------------------------------
# Vite
#--------------------------------------------------------------------------
VITE_APP_NAME="${APP_NAME}"
VITE_PORT=5173
